<!-- MainWindow.xaml -->
<Window x:Class="Telhai.CS.CsharpCourse._05_WpfLinq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LINQ Songs" Height="600" Width="800">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
           
            <RowDefinition Height="Auto" />
          
            <RowDefinition Height="Auto" />
           
            <RowDefinition Height="Auto" />
            
            <RowDefinition Height="Auto" />
           
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <ListBox x:Name="songsListBox"
         Grid.Row="0"
         Margin="5"/>


       
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                    Orientation="Horizontal" Margin="0,0,0,10"
                    HorizontalAlignment="Center" >

            <Button x:Name="btnLoad"
                    Content="Load 50 Songs"
                    Width="110" Margin="5"
                    Click="btnLoad_Click"/>

            <Button x:Name="btnSortArtist"
                    Content="Sort by Artist"
                    Width="110" Margin="5"
                    Click="btnSortArtist_Click"/>

            <Button x:Name="btnSortDuration"
                    Content="Sort by Duration"
                    Width="120" Margin="5"
                    Click="btnSortDuration_Click"/>

            <Button x:Name="btnShortHits"
                    Content="Short Hits (&lt; 3 min)"
                    Width="140" Margin="5"
                    Click="btnShortHits_Click"/>

            <Button x:Name="btnGroupByArtist"
                    Content="Group By Artist"
                    Width="130" Margin="5"
                    Click="btnGroupByArtist_Click"/>
        </StackPanel>

   
        <GroupBox Grid.Row="2" Grid.ColumnSpan="2"
                  Header="Add Song" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Artist:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtArtist" Grid.Column="1" Margin="5,0"/>

                <TextBlock Text="Title:" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="txtTitle" Grid.Column="3" Margin="5,0"/>

                <TextBlock Text="Duration:" Grid.Column="4" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="txtDuration" Grid.Column="5" Margin="5,0"/>

                <Button x:Name="btnAdd"
                        Content="Add"
                        Grid.Column="6" Margin="10,0,0,0"
                        Click="btnAdd_Click"/>
            </Grid>
        </GroupBox>

     
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="0,0,0,10" HorizontalAlignment="Center">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtSearch" Width="200" Margin="0,0,5,0"/>
            <Button x:Name="btnSearch"
                    Content="Search"
                    Width="80"
                    Click="btnSearch_Click"/>
        </StackPanel>

        <Grid Grid.Row="4" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Total Duration: " FontWeight="Bold"/>
                <TextBlock x:Name="txtTotalDuration"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Average Length: " FontWeight="Bold"/>
                <TextBlock x:Name="txtAverageLength"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Longest Song: " FontWeight="Bold"/>
                <TextBlock x:Name="txtLongestSong"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

