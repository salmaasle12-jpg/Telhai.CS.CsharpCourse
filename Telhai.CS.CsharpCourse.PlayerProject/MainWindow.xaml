<Window x:Class="Telhai.CS.CsharpCourse.PlayerProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Player"
        Height="900"
        Width="1400"
        Background="#1E1E1E">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT MENU -->
        <StackPanel Grid.Column="0"
                    Background="#2B2B2B"
                    Margin="10">

            <Button Content="Add MP3"
                    Click="BtnAdd_Click"
                    Height="40"
                    Margin="0,10,0,0"/>

            <Button Content="Remove"
                    Click="BtnRemove_Click"
                    Height="40"
                    Margin="0,10,0,0"/>

            <Button Content="Settings"
                    Click="BtnSettings_Click"
                    Height="40"
                    Margin="0,10,0,0"/>

            <Button Content="Edit"
                    Click="Edit_Click"
                    Height="40"
                    Margin="0,10,0,0"/>
        </StackPanel>

        <!-- RIGHT SIDE -->
        <Grid Grid.Column="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TOP INFO -->
            <Border Grid.Row="0"
                    Background="#252526"
                    Padding="15"
                    CornerRadius="10"
                    Margin="0,0,0,10">

                <StackPanel Orientation="Horizontal">

                    <!-- DEFAULT PLACEHOLDER -->
                    <Border Width="160"
                            Height="160"
                            Background="#444"
                            CornerRadius="10"
                            Margin="0,0,15,0">
                        <Image Source="{Binding CoverImage}"
                               Stretch="UniformToFill"/>
                    </Border>

                    <StackPanel>

                        <TextBlock Text="{Binding SongTitle}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"/>

                        <TextBlock Text="{Binding ArtistName}"
                                   FontSize="16"
                                   Foreground="LightGray"/>

                        <TextBlock Text="{Binding AlbumName}"
                                   FontSize="14"
                                   Foreground="Gray"/>

                        <TextBlock Text="{Binding FilePath}"
                                   FontSize="11"
                                   Foreground="DarkGray"
                                   TextWrapping="Wrap"
                                   Width="650"/>
                    </StackPanel>

                </StackPanel>
            </Border>

            <!-- SONG LIST -->
            <ListBox x:Name="songsListBox"
                     Grid.Row="1"
                     FontSize="16"
                     Margin="0,0,0,10"
                     SelectionChanged="SongsListBox_SelectionChanged"
                     MouseDoubleClick="SongsListBox_MouseDoubleClick"/>

            <!-- CONTROLS -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <Button Content="⏮" Click="BtnPrev_Click" Width="80" Margin="5"/>
                <Button Content="▶ Play" Click="BtnPlay_Click" Width="90" Margin="5"/>
                <Button Content="⏸ Pause" Click="BtnPause_Click" Width="90" Margin="5"/>
                <Button Content="⏭" Click="BtnNext_Click" Width="80" Margin="5"/>

                <Slider x:Name="volumeSlider"
                        Width="150"
                        Minimum="0"
                        Maximum="1"
                        Value="0.5"
                        Margin="20,0"
                        ValueChanged="volumeSlider_ValueChanged"/>
            </StackPanel>

        </Grid>
    </Grid>
</Window>




