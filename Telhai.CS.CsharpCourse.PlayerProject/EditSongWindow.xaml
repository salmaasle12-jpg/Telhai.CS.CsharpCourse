<Window x:Class="Telhai.CS.CsharpCourse.PlayerProject.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song"
        Height="500"
        Width="700"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Width="180" Height="180" Background="#444" CornerRadius="10" Margin="0,0,10,0">
            <Image Source="{Binding CoverImage}" Stretch="UniformToFill"/>
        </Border>

        <StackPanel Grid.Column="1">

            <TextBlock Text="Song Title" FontWeight="Bold"/>
            <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Artist"/>
            <TextBlock Text="{Binding Artist}"
                       Foreground="Gray"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Album"/>
            <TextBlock Text="{Binding Album}"
                       Foreground="Gray"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Extra Images" FontWeight="Bold"/>

            <ListBox ItemsSource="{Binding ExtraImages}"
                     Height="120"
                     Margin="0,5"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="Add Image"
                        Command="{Binding AddImageCommand}"
                        Width="100"
                        Margin="0,0,10,0"/>

                <Button Content="Remove Image"
                        Command="{Binding RemoveImageCommand}"
                        Width="120"/>
            </StackPanel>

            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Width="120"
                    Height="35"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
